<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_book_detail_review_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/profileone_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_detail_review_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vukien104"
                android:textColor="@color/regular_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/book_detail_review_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/ratingBarDark"
                android:progressBackgroundTint="@color/title_color"
                style="@style/Widget.AppCompat.RatingBar.Small" />

            <TextView
                android:id="@+id/book_detail_review_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách rất hay"
                android:textColor="@color/regular_text_color"
                android:textSize="14sp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:maxLines="2"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>